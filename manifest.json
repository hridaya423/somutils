{
  "manifest_version": 3,
  "name": "SOM Utils",
  "version": "1.7",
  "description": "Chrome extension for useful stats on Hack Club's Summer of Making",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://summer.hackclub.com/*",
    "https://lb.summer.hackclub.com/*",
    "https://explorpheus.hackclub.com/*",
    "https://ai.hackclub.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://summer.hackclub.com/*"],
      "js": ["content.js", "chart.min.js", "chartjs-adapter-date-fns.bundle.min.js", "ai-detector.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "SOM Utils"
  },
  "web_accessible_resources": [
    {
      "resources": ["themes/*"],
      "matches": ["https://summer.hackclub.com/*"]
    }
  ]
}